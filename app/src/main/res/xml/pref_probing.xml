<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="check_frequency"
        android:title="@string/pref_title_check_frequency"
        android:summary="@string/pref_description_check_frequency"
        android:entries="@array/pref_check_frequency_titles"
        android:entryValues="@array/pref_check_frequency_values"
        android:defaultValue="180"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <CheckBoxPreference
        android:key="allow_ping"
        android:title="@string/pref_title_allow_ping"
        android:summary="@string/pref_description_allow_ping"
        android:defaultValue="true" />

    <EditTextPreference
        android:key="ping_keyword"
        android:title="@string/pref_title_ping_keyword"
        android:summary="@string/pref_description_ping_keyword"
        android:defaultValue="@string/pref_default_ping_keyword" />

</PreferenceScreen>
